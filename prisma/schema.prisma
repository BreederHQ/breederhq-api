  PaymentIntent     PaymentIntent[]
  AnimalTraitValue  AnimalTraitValue[]
  AnimalTraitEntry  AnimalTraitEntry[]
  VaccinationRecord VaccinationRecord[]
  Document          Document[]
  Invoice           Invoice[]
  Expense           Expense[]
  genetics          AnimalGenetics?

