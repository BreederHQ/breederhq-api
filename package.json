{
  "name": "breederhq-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "npx dotenv -e .env.dev -- tsx watch src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "start:render": "node dist/server.js",
    "test": "npx dotenv -e .env.dev -- tsx tests/run-tests.ts",
    "test:contracts": "npx dotenv -e .env.dev -- tsx --test tests/party-api-contracts.test.ts",
    "test:regression": "npx dotenv -e .env.dev -- tsx --test tests/party-migration-regression.test.ts",
    "validate:sql": "npx dotenv -e .env.dev -- tsx scripts/validate-party-migration.ts",
    "db:dev": "npx dotenv -e .env.dev.migrate --override -- prisma db push --schema=prisma/schema.prisma",
    "db:dev:force": "npx dotenv -e .env.dev.migrate --override -- prisma db push --accept-data-loss --schema=prisma/schema.prisma",
    "db:prod": "npx dotenv -e .env.prod.migrate --override -- prisma migrate deploy --schema=prisma/schema.prisma",
    "db:prod:status": "npx dotenv -e .env.prod.migrate --override -- prisma migrate status --schema=prisma/schema.prisma",
    "db:studio": "npx dotenv -e .env.studio --override -- prisma studio --schema=prisma/schema.prisma",
    "db:pull": "npx dotenv -e .env.studio --override -- prisma db pull --schema=prisma/schema.prisma",
    "db:gen": "prisma generate --schema=prisma/schema.prisma",
    "postinstall": "prisma generate --schema=prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.17.1",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.6.0",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^7.4.4",
    "prisma": "^6.17.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}